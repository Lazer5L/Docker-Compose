version: '3'
services:
  nzbget:
    image: lscr.io/linuxserver/nzbget:latest
    container_name: nzbget
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=America/Chicago
    logging:
      driver: "json-file"
      options:
        max-file: 5
        max-size: 1m
    volumes:
      - /docker/nzbget/config:/config
      - /mnt/nas/Downloads/nzb/:/downloads
    network_mode: DockerInternal
    ports:
      - 16789:16789
    restart: unless-stopped 
